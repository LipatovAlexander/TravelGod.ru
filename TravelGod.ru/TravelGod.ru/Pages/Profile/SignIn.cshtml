@page
@model TravelGod.ru.Pages.Profile.SignIn

@{
    ViewData["Title"] = "Авторизация";
}

@section Styles {
    <link rel="stylesheet" href="/css/Profile/SignIn.css">
}

<div class="container text-center d-flex align-items-center">
    <form class="form-signin" method="Post">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#012970" class="bi bi-person-bounding-box mb-2" viewBox="0 0 16 16">
            <path d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z"/>
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
        </svg>
        <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
        <div class="form-group">
            <input asp-for="SignInModel.Login" type="text" class="form-control mb-2 mt-2" placeholder="Логин">
            <span asp-validation-for="SignInModel.Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="SignInModel.Password" type="password" class="form-control mb-2 mt-2" placeholder="Пароль">
            <span asp-validation-for="SignInModel.Password" class="text-danger"></span>
        </div>
        <div class="checkbox mb-3 mt-4">
            <label>
                <input asp-for="SignInModel.RememberMe" type="checkbox" checked> Запомнить меня
            </label>
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Войти">
        <a class="btn btn-lg btn-outline-secondary btn-block" asp-area="" asp-page="SignUp">Создать аккаунт</a>
    </form>
    <label></label>
</div>

@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}